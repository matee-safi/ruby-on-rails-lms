<% if @latest_courses.empty? %>
  <h1>No courses present</h1>
<% else %>
  <div class="md:mx-8 lg:mx-12">
    <h1 class="font-bold text-primary text-2xl py-2">Latest Courses</h1>
    <% @latest_courses.each do |course| %>
      <div class="card card-compact bg-base-300 mb-10 shadow-xl">
        <figure><img src="https://isdmgroup.in/wp-content/uploads/2021/08/couress-1024x640.png" alt=<%= course.name %> /></figure>
        <div class="card-body">
          <div class="flex justify-between">
            <h2 class="card-title"><%= course.name %></h2>
            <div class="text-sm text-gray-500 flex items-center gap-2">
              <img class="rounded-full w-4 h-4" src="data:image/jpeg;base64,"/>
              <span>Amin Baaqi</span>
            </div>
          </div>
          <p>If a dog chews shoes whose shoes does he choose?</p>
          <div class="card-actions justify-end">
            <%= link_to 'Details', course_path(course), class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<% if @latest_blogs.empty? %>
  <h1>No blogs present</h1>
<% else %>
  <div class="md:mx-8 lg:mx-12">
    <h1 class="font-bold text-primary text-2xl py-2">Latest Blogs</h1>
    <% @latest_blogs.each do |blog| %>
      <%= link_to blog_path(blog) do %>
        <div class="card card-compact bg-base-300 mb-10 shadow-xl">
          <% if blog.title_image.attached? %>
            <figure><img src="<%= rails_blob_path(blog.title_image, only_path: true) %>" alt="<%= blog.title %>" /></figure>
          <% else %>
            <figure><img src="https://elementor.com/marketing/wp-content/uploads/sites/9/2017/09/10ways3.png" alt="<%= blog.title %>" /></figure>
          <% end %>
          <div class="card-body">
            <div class="flex flex-col gap-2">
              <h2 class="card-title w-full"><%= blog.title %></h2>
              <div class="text-sm text-gray-500 flex items-center gap-2">
                <img class="rounded-full w-4 h-4" src="data:image/jpeg;base64,"/>
                <span>Amin Baaqi</span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
