<div class="flex p-2">
  <div class="w-28 h-28 ring ring-primary rounded-full mr-4">
    <% if @user.profile_picture.present? %>
      <%= image_tag @user.profile_picture, class: "w-full h-full object-cover rounded-full", id:"profile-picture-preview" %>
    <% else %>
      <%= image_tag 'profile.jpg', class: "w-full h-full object-cover rounded-full", id:"profile-picture-preview" %>
    <% end %>
  </div>
  <div class="pt-4">
    <h2 class="text-xl font-semibold text-primary"><%= @user.name %></h2>
    <h3 class="text-gray-500"><%= @user.email %></h3>
  </div>
</div>

<div class="flex flex-col">
  <% if @user.bio.present? %>
    <strong class="pt-2">About</strong>
    <p id="bio-content" data-full-bio="<%= @user.bio %>">
      <%= truncate(@user.bio, length: 150, separator: ' ') %>
      <button onclick="showMore()" class="text-gray-500">see more</button>
    </p>
  <% end %>

  <div class="flex items-center gap-2 mt-4 mb-0 text-lg">
    <strong>Joined on:</strong>
    <p><%= @user.created_at.strftime("%B, %Y") %></p>
  </div>

  <% if @user.phone_number.present? %>
    <div class="flex items-center gap-2 my-2">
      <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 19 18">
        <path d="M18 13.446a3.02 3.02 0 0 0-.946-1.985l-1.4-1.4a3.054 3.054 0 0 0-4.218 0l-.7.7a.983.983 0 0 1-1.39 0l-2.1-2.1a.983.983 0 0 1 0-1.389l.7-.7a2.98 2.98 0 0 0 0-4.217l-1.4-1.4a2.824 2.824 0 0 0-4.218 0c-3.619 3.619-3 8.229 1.752 12.979C6.785 16.639 9.45 18 11.912 18a7.175 7.175 0 0 0 5.139-2.325A2.9 2.9 0 0 0 18 13.446Z"/>
      </svg>
      <p class="text-lg font-bold"><%= @user.phone_number %></p>
    </div>
  <% end %>
  <%= link_to edit_user_path(current_user), class:"btn btn-primary" do %>
    <svg class="w-6 h-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
      <path d="M12.687 14.408a3.01 3.01 0 0 1-1.533.821l-3.566.713a3 3 0 0 1-3.53-3.53l.713-3.566a3.01 3.01 0 0 1 .821-1.533L10.905 2H2.167A2.169 2.169 0 0 0 0 4.167v11.666A2.169 2.169 0 0 0 2.167 18h11.666A2.169 2.169 0 0 0 16 15.833V11.1l-3.313 3.308Zm5.53-9.065.546-.546a2.518 2.518 0 0 0 0-3.56 2.576 2.576 0 0 0-3.559 0l-.547.547 3.56 3.56Z"/>
      <path d="M13.243 3.2 7.359 9.081a.5.5 0 0 0-.136.256L6.51 12.9a.5.5 0 0 0 .59.59l3.566-.713a.5.5 0 0 0 .255-.136L16.8 6.757 13.243 3.2Z"/>
    </svg>
    <span class="text-white">
      Edit Profile
    </span>
  <% end %>
</div>
