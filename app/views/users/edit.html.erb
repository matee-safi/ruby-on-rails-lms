<div class="px-[5%]">
  <%= simple_form_for(@user) do |f| %>

    <%= render 'shared/error_messages', object: @user %>

    <div class="flex flex-col gap-4 form-inputs py-4 mt-2">
      <div class="w-60 h-60 ring ring-primary rounded-full mx-auto md:mx-0">
        <% if @user.profile_picture.present? %>
          <%= image_tag @user.profile_picture, class: "w-full h-full object-cover rounded-full", id:"profile-picture-preview" %>
        <% else %>
          <%= image_tag 'profile.jpg', class: "w-full h-full object-cover rounded-full", id:"profile-picture-preview" %>
        <% end %>
      </div>

      <div class="flex flex-col">
        <%= f.label :profile_picture %>
        <div class="flex w-full join">
          <%= f.file_field :profile_picture, class: "file-input file-input-bordered file-input-primary rounded-r-none", onchange: "readURL(this)", value: @user.profile_picture %>
          <%# <%= button_to 'REMOVE PICTURE', @user.profile_picture.remove class:"btn btn-primary rounded-l-none" %>
        </div>
      </div>

      <div class="flex flex-col">
        <%= f.label :name %>
        <%= f.text_field :name, class:"input input-bordered input-primary" %>
      </div>

      <div class="flex flex-col">
        <label for="email">Email <span>(can't be modified)</span></label>
        <div class="input text-gray-500 input-bordered flex items-center"><%= @user.email %></div>
      </div>

      <div class="flex flex-col">
        <%= f.label :bio %>
        <%= f.text_area :bio, rows: 5, class:"textarea textarea-primary", placeholder:"Share a brief biography or provide details about your preferred time and platform for communication" %>
      </div>

      <div class="flex gap-4 flex-col md:flex-row">
        <div class="flex flex-col w-full">
          <%= f.label :date_of_birth %>
          <%= f.date_field :date_of_birth, class:"input input-bordered input-primary" %>
        </div>

        <div class="flex flex-col w-full">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, class:"input input-bordered input-primary", placeholder:"Without the country code e.g. 07XXXXXXXX" %>
        </div>
      </div>

      <%= f.submit 'UPDATE PROFILE', class:"btn btn-primary" %>
      <%= link_to 'CANCEL', profile_path, class:"btn" %>
    </div>
  <% end %>  
</div>
